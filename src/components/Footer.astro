---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-pinterest', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-[#225522] text-[#ffd700] py-8 border-t-4 border-[#ffd700]">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-bold mb-4">PieCraft Pro</p>
    <p class="mb-4">&copy; {currentYear} PieCraft Pro. All rights reserved.</p>
    
    <div class="flex justify-center gap-6 mb-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-xl hover:text-white transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
    
    <div class="border-t border-[#ffd700] pt-4">
      <p class="text-sm">Bold Culinary Instructional</p>
    </div>
  </div>
</footer>